module syntax.ExpParser;

header {
    import syntax.ExpParserSyntax.*;
}

option verbose;

Program =
    Exp*.

Exp {paren} =
    Assign.

Assign : Exp =
  Cell sp "=" Formula ",".

Formula =
    "SUM(" + Arguments + ")"    {SUM}
    | Formula "+" Formula             {Add, left, 2}
    | Formula "-" Formula           {Sub, left, 2}
    | Formula "*" Formula           {Mul, left, 1}
    | Formula "/" Formula           {Div, left, 1}
    | Formula "^" Formula        {pow, left, 3}
    | Formula "&" Formula        {and, left, 3}
    | Formula "<" Formula        {less, left, 3}
    | Formula ">" Formula        {great, left, 3}
    | Formula "=" Formula        {equal, left, 3}
    | Formula "<=" Formula       {lessEqual, left, 3}
    | Formula ">=" Formula       {greatEqual, left, 3}
    | Array
    | CellRef
    | Constant
    | '(' Formula ')'.

Arguments =
    Formula ";" Arguments {Args}
  | Formula     {Arg}.

Argument =
   Formula.

Constant : Formula =
    Integer     {Num}
  | Letters     {S}
  | Bool        {Boo}.


Array : Formula =
    CellRef ":" CellRef         {Arr}.

ArrayVec : Formula =
    CellRef+.

CellRef : Formula =
  "[." Cell "]"      {Ref}.

Cell : String =
  Letters Digits.

Integer : String =
  Digits Spacing.

Digits : String =
  Digit+.

Digit : String =
  [0-9].

Letters : String =
  Letter+.

Letter : String =
  [A-Z].

Bool : String =
    'false'
  | 'true'.